.name {
    float: left;
}

.scrollview {
    height: 60%;
    position: absolute;
    top: 30px;
    z-index: 100;
    left: 20px;
}

.itemview {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding: 20rpx 20rpx 20rpx 20rpx;
    border-bottom: 1px solid #b1b1b1;
}

.weui-input {
    position: absolute;
    left: 30px;
    top: 0;
    right: 0;
    height: 30px;
    border: 3rpx solid #D9D9D9;
    border-color: #aaa;
    margin-top: 2px;
}

.slide-image {
    width: 100%;
    height: 160px;
}

.up {
    margin-top: 2px;
}

.block {
    border-bottom: solid 0.1rem;
    margin-top: 0.1em;
    padding-top: 25px;
    width: 100%;
    height: 50px;
    padding-left: 10px;
}

.whole {
    width: 100%;
    height: 100%;
    background: linear-gradient(rgb(194,237,220),rgb(83,198,242));
}